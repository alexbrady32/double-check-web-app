@model DoubleCheck.Models.Class

@{
    ViewBag.Title = "Delete Class";
}

<div class="panel-card">
    <div class="Panel-Header">
        <p>&nbsp;</p>
        <h3 style="text-align:center;">Are you sure you want to delete this Class?</h3>
    </div>
    <div class="Panel-Body">
        <br /><br />
        <dl class="dl-horizontal">
            <dt><label>Name</label></dt>
            <dd><input type="text" value="@Html.DisplayFor(model => model.Name)" class="form-control" disabled></dd>
            <br />

            <dt><label>Building</label></dt>
            <dd><input type="text" value="@Html.DisplayFor(model => model.Building)" class="form-control" disabled></dd>
            <br />

            <dt><label>Room Number</label></dt>
            <dd><input type="text" value="@Html.DisplayFor(model => model.Room_Num)" class="form-control" disabled></dd>
            <br />

            <dt><label>Start Date</label></dt>
            <dd><input type="text" value="@Html.DisplayFor(model => model.Start_Date)" class="form-control" disabled></dd>
            <br />

            <dt><label>End Date</label></dt>
            <dd><input type="text" value="@Html.DisplayFor(model => model.End_Date)" class="form-control" disabled></dd>
            <br />

            <dt><label>Time Periods</label></dt>
            <dd><input type="text" value="@ViewBag.TimePeriods" class="form-control" disabled></dd>
            <br />

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger btn-create" />
                <a href="@Url.Action("Index", "Class")" class="btn btn-primary btn-create">Cancel</a>
            </div>
        }
    </div>
</div>