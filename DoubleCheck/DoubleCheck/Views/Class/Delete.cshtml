@model DoubleCheck.Models.Class

@{
    ViewBag.Title = "Delete Class";
}

<h3>Are you sure you want to delete this class?</h3>
<div>
    <h4>Class</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Building</dt>

        <dd>
            @Html.DisplayFor(model => model.Building)
        </dd>

        <dt>Room Number</dt>

        <dd>
            @Html.DisplayFor(model => model.Room_Num)
        </dd>

        <dt>Start Date</dt>

        <dd>
            @Html.DisplayFor(model => model.Start_Date)
        </dd>

        <dt>End Date</dt>

        <dd>
            @Html.DisplayFor(model => model.End_Date)
        </dd>

        <dt>Time Periods</dt>

        <dd>
            @ViewBag.TimePeriods
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
